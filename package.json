{
  "name": "shirt",
  "version": "1.0.0",
  "description": "Simple algebraic data types for javascript and functional programming utilities",
  "license": "MIT",
  "main": "./dist/index.js",
  "files": [
    "./dist/index.js",
    "./dist/shirt.js",
    "./dist/fn.js",
    "./dist/Either.js",
    "./dist/IO.js",
    "./dist/Maybe.js",
    "./dist/Validation.js"
  ],
  "repository": "iansinnott/shirt",
  "author": {
    "name": "Ian Sinnott",
    "email": "ian@iansinnott.com",
    "url": "iansinnott.com"
  },
  "scripts": {
    "test": "ava",
    "test:watch": "ava --verbose --watch",
    "build": "webpack && babel --out-dir=./dist --ignore=./src/fn.test.js src",
    "bump": "npm version patch -m \"v%s\"",
    "bump:minor": "npm version minor -m \"v%s\"",
    "bump:major": "npm version major -m \"v%s\"",
    "preversion": "yarn test",
    "postversion": "git push && git push --tags",
    "prepublish": "yarn run build"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ]
  },
  "keywords": [
    "functional",
    "monads",
    "maybe",
    "either",
    "validation"
  ],
  "dependencies": {
    "lodash.isequal": "^4.5.0"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "babel-register": "^6.22.0",
    "webpack": "^2.2.0"
  }
}
